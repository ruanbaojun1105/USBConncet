<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最新互动"
        android:gravity="center_vertical"
        android:textColor="@color/gray_1"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="10sp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:id="@+id/talk_recycleview"
        />
    <com.xw.repo.XEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/talk_edit"
        android:textColorHint="@color/gray_1"
        android:textColor="@color/blue_t"
        android:layout_margin="5dp"
        android:maxHeight="100dp"
        android:maxLines="5"
        android:maxLength="300"
        android:minHeight="50dp"
        android:gravity="top"
        android:padding="5dp"
        android:hint="互动话题输入"
        android:background="@drawable/edittext_bbb"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.hwx.usbconnect.usbconncet.ui.widget.StateButton
            android:id="@+id/talk_sends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送留言"
            android:layout_margin="5dp"
            app:radius="5dp"
            app:normalBackgroundColor="@color/colorPrimary"
            app:normalTextColor="@color/white"
            app:normalStrokeWidth="1dp"
            app:normalStrokeColor="@color/colorPrimary"
            app:pressedBackgroundColor="@color/gray_4"
            app:pressedTextColor="@android:color/black"
            app:unableBackgroundColor="@color/colorPrimary"
            app:unableTextColor="@color/white"/>
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/talk_setname"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="{fa-edit @color/white 22sp}"
            android:layout_gravity="bottom|right"
            />
    </LinearLayout>

</LinearLayout>