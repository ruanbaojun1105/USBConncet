<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <com.hwx.usbconnect.usbconncet.utils.SmoothCheckBox
        android:id="@+id/checkBox"
        android:layout_width="@dimen/check_width"
        android:layout_height="@dimen/check_width"
        android:layout_margin="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />
    <com.piotrek.customspinner.CustomSpinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/setting_btnbg"
        android:layout_margin="5dp">
    </com.piotrek.customspinner.CustomSpinner>
    <com.piotrek.customspinner.CustomSpinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/setting_btnbg2"
        android:layout_margin="5dp">
    </com.piotrek.customspinner.CustomSpinner>
</LinearLayout>