<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gdjiadstjj"
        android:gravity="center_vertical"
        android:layout_margin="15dp"
        />
    <com.xw.repo.XEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/biucontainer"
            android:textColorHint="@color/gray_1"
            android:textColor="@color/colorPrimary"
            android:maxLines="5"
            android:singleLine="true"
            android:ellipsize="end"
            app:x_disableEmoji="true"
            android:maxLength="50"
            android:layout_marginLeft="15dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drrtr"
        android:gravity="center_vertical"
        android:layout_margin="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        >

        <com.hwx.usbconnect.usbconncet.utils.StateButton
            android:id="@+id/font_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="@string/gtadtrtet"
            app:radius="5dp"
            app:normalBackgroundColor="@color/gray_1"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/gray"
            app:pressedTextColor="@android:color/black"
            app:unableBackgroundColor="@color/colorPrimary"
            app:unableTextColor="@color/white"/>
        <com.hwx.usbconnect.usbconncet.utils.StateButton
            android:id="@+id/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="@string/dtastdtrwqg"
            app:radius="5dp"
            app:normalBackgroundColor="@color/gray_1"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/gray"
            app:pressedTextColor="@android:color/black"
            app:unableBackgroundColor="@color/colorPrimary"
            app:unableTextColor="@color/white"/>
    </LinearLayout>

</LinearLayout>